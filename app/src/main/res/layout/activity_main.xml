<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="10"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/byn_start2"
        style="@style/RoundedCornerButton"

        android:layout_width="351dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:background="@drawable/rate_design"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="487dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="32dp" />

    <Button
        android:id="@+id/byn_start"
        android:layout_width="351dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:background="@drawable/start_design"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="403dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="Счёт: 305"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="143dp" />

    <Button
        android:id="@+id/btn_videomodey"
        android:layout_width="159dp"
        android:layout_height="74dp"

        android:background="@drawable/coinsvideo"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="284dp" />

    <Button
        android:id="@+id/btn_energ"
        android:layout_width="167dp"
        android:layout_height="32dp"

        android:background="#00000000 "
        android:drawableEnd="@drawable/energy_design"
        android:fontFamily="@font/sfprodisplay_regular"

        android:text="Энергия 11/12"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="282dp" />

    <Button
        android:id="@+id/btn_money"
        android:layout_width="142dp"
        android:layout_height="32dp"

        android:background="@drawable/coins"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:text="Вк"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="606dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:text="Фейсбук"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="606dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:text="Инстаграм"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="590dp" />

</android.support.constraint.ConstraintLayout>